import matplotlib.pyplot as plt
import numpy as np

# Lee los datos del archivo txt
filename = "TESTS/Box-Muller/datos_box_muller.txt"  # Cambia esto por el nombre de tu archivo
with open(filename, "r") as file:
    data = [float(line.strip()) for line in file]

# Genera el histograma
plt.hist(data, bins=30, density=True, alpha=0.7, color='blue', edgecolor='black')

# Configura el t√≠tulo y las etiquetas
plt.title("Histograma de valores gaussianos")
plt.xlabel("Valor")
plt.ylabel("Densidad")

# Guarda el histograma como imagen
output_image = "TESTS/Box-Muller/histograma_gaussiana.png"  # Nombre del archivo de salida
plt.savefig(output_image, dpi=300, bbox_inches='tight')  # Guarda la imagen con alta calidad

# Muestra el histograma
plt.show()